{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
